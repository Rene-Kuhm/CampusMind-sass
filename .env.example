# ===========================================
# CampusMind - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Database
DATABASE_URL=postgresql://campusmind:campusmind_dev@localhost:5432/campusmind_db

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d

# API Configuration
API_PORT=3001
API_PREFIX=api/v1

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001

# Vector Database (pgvector or qdrant)
VECTOR_DB_PROVIDER=pgvector
# If using Qdrant:
# QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=

# LLM Provider Configuration
LLM_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# Academic APIs (optional - for external search)
# SEMANTIC_SCHOLAR_API_KEY=
# OPENALEX_EMAIL=your-email@example.com

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Redis (for caching/sessions - optional for MVP)
# REDIS_URL=redis://localhost:6379

# Node Environment
NODE_ENV=development

# ===========================================
# BILLING - Mercado Pago (Argentina/LATAM)
# ===========================================
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-access-token
MERCADOPAGO_PUBLIC_KEY=your-mercadopago-public-key
MERCADOPAGO_WEBHOOK_SECRET=your-mercadopago-webhook-secret

# ===========================================
# BILLING - Lemon Squeezy (International)
# ===========================================
LEMONSQUEEZY_API_KEY=your-lemonsqueezy-api-key
LEMONSQUEEZY_STORE_ID=your-store-id
LEMONSQUEEZY_WEBHOOK_SECRET=your-lemonsqueezy-webhook-secret

# Lemon Squeezy Product Variant IDs
LEMONSQUEEZY_PRO_MONTHLY_VARIANT_ID=
LEMONSQUEEZY_PRO_YEARLY_VARIANT_ID=
LEMONSQUEEZY_PREMIUM_MONTHLY_VARIANT_ID=
LEMONSQUEEZY_PREMIUM_YEARLY_VARIANT_ID=

# ===========================================
# APP URLs
# ===========================================
API_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000
