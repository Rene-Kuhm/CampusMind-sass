model ProfessorReview {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  professorId String   @map("professor_id")

  // Calificaciones (1-5)
  overallRating   Int   @map("overall_rating")
  difficultyRating Int  @map("difficulty_rating")
  clarityRating   Int   @map("clarity_rating")
  helpfulnessRating Int @map("helpfulness_rating")

